<%- include("../partials/header") %>

	<div class="container">
			<div class="row text-center">
				<div class="col-lg-12">
					<h3>Edit <%= campground.name %></h3>
				</div>
			</div>
			<div class="row center-elements">
				<div class="col-lg-12">
					<form class="form-group" action="/campgrounds/<%= campground._id %>/edit?_method=PUT" method="POST">
						<div class="form-group">
							<input class="form-control" type="text" placeholder="Camp Name" name="campgrounds[name]" value= "<%=campground.name%>">
						</div>
						<div class="form-group">
							<input class="form-control" type="text" placeholder="Image Url" name="campgrounds[image]" value= "<%=campground.image%>">
						</div>
				       <div class="form-group">
							<input class="form-control" type="text" placeholder="Description" name="campgrounds[description]" value= "<%=campground.description%>">
						</div>
                        <div class="form-group">
							<input class="form-control" type="number" placeholder="price" name="campgrounds[price]" value= "<%=campground.price%>" min="0.01" step="0.01">
						</div>
						<button class="btn btn-lg btn-primary btn-block">Submit</button>
					</form>
				</div>

				<a href="/campgrounds/<%= campground._id %>">Go back</a>
			</div>
	</div>

<%- include("../partials/footer") %>