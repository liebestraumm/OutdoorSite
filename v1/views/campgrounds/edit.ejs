<%- include("../partials/header") %>

	<div class="container">
			<div class="row text-center">
				<div class="col-lg-12">
					<h3>Edit <%= campground.name %></h3>
				</div>
			</div>
			<div class="row center-elements">
				<div class="col-lg-12">
					<form enctype="multipart/form-data" class="form-group" action="/campgrounds/<%= campground._id %>/edit?_method=PUT" method="POST">
						<div class="form-group">
							<input class="form-control" type="text" placeholder="Camp Name" name="name" value= "<%=campground.name%>">
						</div>
						<div class="form-group">
							<label for="image">Image</label>
							<input class="form-control" type="file" id="image" name="image" accept="image/*">
						</div>
				       <div class="form-group">
							<input class="form-control" type="text" placeholder="Description" name="description" value= "<%=campground.description%>">
						</div>
						<div class="form-group">
							<label for="location">Location</label>
							<input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
						</div>
                        <div class="form-group">
							<input class="form-control" type="number" placeholder="price" name="price" value= "<%=campground.price%>" min="0.01" step="0.01">
						</div>
						<button class="btn btn-lg btn-primary btn-block">Submit</button>
					</form>
				</div>

				<a href="/campgrounds/<%= campground._id %>">Go back</a>
			</div>
	</div>

<%- include("../partials/footer") %>