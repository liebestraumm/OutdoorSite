<%- include("../partials/header") %>

	<div class="container">
			<div class="row text-center">
				<div class="col-lg-12">
					<h3>Add a new comment to <%= campground.name %></h3>
				</div>
			</div>
			<div class="row center-elements">
				<div class="col-lg-12">
					<form class="form-group" action="/campgrounds/<%= campground._id%>/comments" method="POST">
						<div class="form-group">
							<input class="form-control" type="text" placeholder="Author" name="comments[author]">
						</div>

				       <div class="form-group">
							<input class="form-control" type="text" placeholder="Comment" name="comments[text]">
						</div>
						<button class="btn btn-lg btn-primary btn-block">Submit</button>
					</form>
				</div>

				<a href="/campgrounds">Go back</a>
			</div>
	</div>

<%- include("../partials/footer") %>