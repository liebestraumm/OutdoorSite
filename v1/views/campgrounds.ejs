<%- include("partials/header") %>

<div class="container">
<header class="jumbotron">
<div class = "container">
	<h1> Welcome to Yelp Camp! </h1>
	<p> View our hand-picked campgrounds from all over the world</p>

	<p>

	<a class="btn btn-primary btn-lg" href="/campgrounds/new">Create a new campground</a>

	</p>

</div>
</header>

<div class="row imagegrid">
		<% campgrounds.forEach(function(camp){  %>
			<div class="col-lg-4 col-md-3 col-sm-6">
				<div class="thumbnail">
					<div class="caption">
						<h3><%= camp.name %> </h3> 
					</div>  
					<img src=" <%= camp.image %>" >
				</div>
			</div>

		<% }); %>

</div>
<%- include("partials/footer") %>