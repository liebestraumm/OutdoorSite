<%- include("partials/header") %>

<header>
	<div class="jumbotron text-center" style="background-color: magenta;">
		<h2>Yelp Campgrounds</h2>
		<h4>View our hand picked campgrounds from all over the world</h4>
		<a class="btn btn-lg btn-primary" href="/campgrounds/new"> Create a new Campground </a>
	</div> 

</header>

<h1> Campgrounds </h1>

	<div class= "row imagegrid">

		<% campgrounds.forEach(function(camp){  %>

			<div class = "col-lg-4 col-md-3 col-sm-6 col-xs-6">
				<div class = "thumbnail">
					<div class = "caption">
				    <h4> <%= camp.name %> </h4>
				    </div>
					<img src= <%= camp.image %> >
				</div>
			</div>

		<% }); %>
	</div>

<%- include("partials/footer") %>